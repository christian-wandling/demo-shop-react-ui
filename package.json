{
  "name": "@demo-shop-react-ui/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "docker-compose up -d",
    "start:local": "nx serve ui",
    "rebuild": "docker-compose up -d --build --remove-orphans",
    "cm": "cz",
    "openapi:generate": "rm -rf libs/api/src/lib/openapi && openapi-generator generate -g typescript-fetch -o libs/api/src/lib/openapi -i http://localhost:3000/api/docs/v1/swagger.json -c open-api.yaml",
    "prepare": "husky",
    "lint": "npx nx run-many -t lint --exclude api",
    "test": "npx nx run-many -t test",
    "e2e": "npx nx run-many -t e2e --exclude api"
  },
  "private": true,
  "dependencies": {
    "@date-fns/utc": "^2.1.0",
    "@hookform/resolvers": "^5.0.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "framer-motion": "^12.7.4",
    "html-canvas": "^0.0.4",
    "jspdf": "^3.0.1",
    "keycloak-js": "^22.0.5",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "^7.56.0",
    "react-router": "^7.5.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-nx-scopes": "^19.8.0",
    "@eslint/js": "^9.25.1",
    "@nx/devkit": "20.6.2",
    "@nx/eslint": "20.6.2",
    "@nx/eslint-plugin": "20.6.2",
    "@nx/js": "20.6.2",
    "@nx/playwright": "20.6.2",
    "@nx/react": "20.6.2",
    "@nx/vite": "20.6.2",
    "@nx/web": "20.6.2",
    "@nx/workspace": "20.6.2",
    "@openapitools/openapi-generator-cli": "^2.19.1",
    "@playwright/test": "^1.52.0",
    "@swc-node/register": "~1.10.10",
    "@swc/cli": "~0.7.3",
    "@swc/core": "~1.11.21",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "10.4.21",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "lint-staged": "^15.5.1",
    "nx": "20.6.2",
    "postcss": "8.5.3",
    "prettier": "^2.6.2",
    "standard-version": "^9.5.0",
    "tailwindcss": "3.4.17",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.31.0",
    "vite": "^6.3.2",
    "vitest": "^3.0.0",
    "zustand": "^5.0.3"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.(ts|tsx|js|jsx|html)": "node ./node_modules/eslint/bin/eslint.js --fix --ignore-pattern **.spec.* --ignore-pattern **/*-e2e/**"
  }
}
